generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Etf {
  id    Int    @id @default(autoincrement())
  etf_symbol String @unique
  etf_name String
  crypto_name String
  crypto_symbol String
  company_name  String
  transactions Transaction[]
}

model Transaction {
  id    Int    @id @default(autoincrement())
  etf_id Int
  amount Float
  date DateTime
  etf Etf @relation(fields: [etf_id], references: [id])
}
